{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@hotwired/stimulus": "^3.1.0",
    "@hotwired/turbo-rails": "^7.1.3",
    "esbuild": "^0.15.7",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "sass": "^1.54.9"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets  --loader:.js=jsx",
    "start": "node esbuild.config.js --serve",
    "build:css": "sass ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:tailwind": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.6"
  }
}
